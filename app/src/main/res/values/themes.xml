<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Batchcookingia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Fuente personalizada para la aplicación -->
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- Theme.Batchcookingia inherits from Base theme -->
    <style name="Theme.Batchcookingia" parent="Base.Theme.Batchcookingia" />

    <!-- Aplicar tema a la aplicación -->
    <style name="AppTheme" parent="Theme.Batchcookingia">
        <!-- Definir el estilo para los botones -->
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>
</resources>
